<div class="row">
	<%= render partial: "admin/admin_header" %>
		<!-- 大学登録 -->
		<div class="col-lg-1">
		</div>
		<div class="col-lg-8">
			<%= form_for(@university, url: admin_universities_path) do |f| %>
				<div class="field">
					<label for="university_name"></label>
						<%= f.text_field :name, :placeholder => "大学名" %>
				</div>

				<div class="field">
		 			<label for="university_image"></label>
		 				<%= f.attachment_field :university_image %>
		 		</div>

				<div class="field">
					<label for="university_location"></label>
						<%= f.text_field :location, :placeholder => "住所" %>
				</div>

				<div class="actions">
					<%= f.submit '登録', :class=>"btn btn-lg" %>
				</div>
			<% end %>
    <!-- 大学一覧 -->
			<table class="table table-hover table-inverse">
				<thead>
					<tr class="table-avtive">
						<th></th>
						<th>大学名</th>
						<th>大学住所</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<% @universities.each do |university| %>
						<tr data-href="<%= edit_admin_university_path(university.id) %>">
							<td><%= attachment_image_tag(@university, :university_image, size:'100x100', fallback: "no_image.png", class:"img-thumbnail") %></td>
							<td><%= university.name %></td>
							<td><%= university.location %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
</div>