    <div class="navbar-nav ml-auto mr-auto" style="font-size:15px; font-family:AvenirLTStd-Medium; letter-spacing:0.5px;">
      <span class="nav-item nav-link active"><%= link_to 'HOME', root_path, style: "color:black;text-decoration:none;" %></span>
