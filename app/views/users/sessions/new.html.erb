<%= render 'users/user_header' %>

<div class="container">

  <div class="row">

    <div class="col-lg-4"></div>

    <div class="col-lg-4 my-3">

      <h2 class="text-center mb-4">ログイン</h2>

      <%- flash.each do |name, msg| -%>
      <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
      <%- end -%>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group mt-2">
        <%= f.label :メールアドレス %>  <span style="color:red; font-size:15px;">*必須</span><br />
        <%= f.email_field :email, autofocus: true,:class => "form-control", autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.label :パスワード %>  <span style="color:red; font-size:15px;">*必須</span><br />
        <%= f.password_field :password,:class => "form-control", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="form-group float-right">
        <%= f.check_box :remember_me %>
        <%= f.label :ログインを維持 %>
      </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", :class=>"btn btn-sm btn-danger form-control" %>
      </div>
      <% end %>

      <%= link_to "アカウントをお持ちでない方はこちら", new_user_registration_path, class: "my-3 float-right", style: "color:black; font-size:12px;" %>

    </div>

    <div class="col-lg-4"></div>

  </div>
</div>
