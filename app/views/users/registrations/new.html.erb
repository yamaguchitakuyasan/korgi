<%= render 'users/user_header' %>

<div class="container">

  <div class="row">

    <div class="col-lg-4"></div>

      <div class="col-lg-4">

        <h2 class="text-center my-3">アカウント作成</h2>

        <% if resource.errors.any? %>
        <div class="row my-2">
          <div class="error-message">
            <h5>入力内容を確認してください</h5>
            <% resource.errors.full_messages.each do |message| %>
              <li style="list-style: none;"><%= message %></li>
            <% end %>
          </div>
        </div>
           <% end %>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="field">
          <%= f.label :名前 %><span style="color:red; font-size:15px;">*必須</span><br />
          <%= f.text_field :name, :class => "form-control", autocomplete: "name" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %><span style="color:red; font-size:15px;">*必須</span><br />
          <%= f.email_field :email, autofocus: true, :class => "form-control", autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :出身大学 %><br />
          <%= f.text_field :former_university, :class => "form-control", autocomplete: "former_university" %>
        </div>

        <div class="field">
          <%= f.label :専攻 %><br />
          <%= f.text_field :major, :class => "form-control", autocomplete: "major" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(最低<%= @minimum_password_length %>文字)</em>
          <% end %><span style="color:red; font-size:15px;">*必須</span><br />
          <%= f.password_field :password, :class => "form-control", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :確認用パスワード %><span style="color:red; font-size:15px;">*必須</span><br />
          <%= f.password_field :password_confirmation, :class => "form-control", autocomplete: "new-password" %>
        </div>

        <div class="actions my-3 text-center">
          <%= f.submit "アカウントを作成する", :class=>"btn btn-sm btn-danger form-control" %>
        </div>
        <% end %>

        <%= link_to "アカウントをお持ちの方はこちら", new_user_session_path, class: "float-right", style: "color:black; font-size:12px;" %>

      </div>

      <div class="col-lg-4"></div>

      </div>

    </div>